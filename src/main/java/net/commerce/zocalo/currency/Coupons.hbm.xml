<hibernate-mapping package="net.commerce.zocalo.currency">
    <class name="Coupons" table="COUPONS">
        <id name="id" column="COUPONS_ID">
            <generator class="increment"/>
        </id>

        <component name="balance" class="net.commerce.zocalo.currency.Quantity" unique="false">
            <property name="quant"/>
        </component>
        <many-to-one name="token" class="CurrencyToken" outer-join="true" not-null="true" />
        <many-to-one name="position" class="net.commerce.zocalo.claim.Position" not-null="true" column="POSITIONS_ID" />
    </class>
</hibernate-mapping>
